{
  "name": "metaobject-persistence",
  "version": "0.20.0",
  "description": "Typed metaobject helpers and a generator CLI for Shopify declarative metaobjects",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "generate-metaobject-types": "dist/cli/generate-metaobject-types.js"
  },
  "files": ["dist"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "check": "tsc --noEmit",
    "graphql-codegen": "graphql-codegen --watch",
    "gen:types": "generate-metaobject-types",
    "prepublishOnly": "pnpm run build && pnpm run check"
  },
  "dependencies": {
    "@ltd/j-toml": "^1.38.0",
    "@standard-schema/spec": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@shopify/shopify-app-react-router": "^0.2.0",
    "@shopify/api-codegen-preset": "^1.2.0",
    "@shopify/shopify-api": "^12.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "valibot": "^1.1.0"
  }
}
